<div class="homepage">
  <h1>Lonely Book Club</h1>
  <%= search_form_for @q do |f| %>

    <%= f.search_field :title_cont %>

    <%= f.submit %>
  <% end %><br>
  <div class="books">
    <% @books.each do |book| %>
        <h2><%= link_to book.title, book %></h2>
    <% end %><br>
  </div>
  <%= button_to "Add Book", new_book_path, method: :get %><br><br>
  <div class="footer">
    <% if user_signed_in? %>
        <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "danger" %>
        <%= link_to "Edit Profile", edit_user_registration_path, class: "btn" %>
    <% end %>
    <%= link_to "Authors", authors_path %>
    <%= link_to "Genres", genres_path %>
  </div>
</div>